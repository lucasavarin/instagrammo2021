<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.instagrammo">
    <uses-permission
        android:name="android.permission.INTERNET"/>
    <application
        android:name=".InstagrammoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Instagrammo"
        android:usesCleartextTraffic="true">
        <activity android:name="com.example.instagrammo.view.views.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.instagrammo.view.views.login.LogInActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity android:name=".view.BaseHomeActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>



    </application>

</manifest>