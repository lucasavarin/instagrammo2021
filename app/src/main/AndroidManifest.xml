<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lynx.instagrammo" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:name=".view.ApplicationContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Instagrammo">
        <activity android:name=".view.splash.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"  />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- LOGINPAGE -->
        <activity android:name=".view.login.LoginActivity"/>
        <!-- HOMEPAGE -->
        <activity android:name=".view.MainActivity" android:windowSoftInputMode="adjustPan" />
        <!--FOREGROUND SERVICE-->
        <service android:name=".view.service.ForegroundService" android:enabled="true" android:exported="false"/>
    </application>

</manifest>