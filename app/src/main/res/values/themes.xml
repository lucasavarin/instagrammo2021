<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Instagrammo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_color</item>
        <item name="colorPrimaryVariant">@color/purple_color</item>
        <item name="colorOnPrimary">@color/star_comma</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_green</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Instagrammo.Fullscreen" parent="Theme.Instagrammo">
        <item name="android:actionBarStyle">@style/Widget.Theme.Instagrammo.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Instagrammo.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>