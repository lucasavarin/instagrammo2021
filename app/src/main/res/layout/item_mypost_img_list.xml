<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/line_divisor"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginTop="30dp"
        android:id="@+id/list_profile_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/profile_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profile_list_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"

        app:layout_constraintTop_toBottomOf="@id/list_profile_img"
        app:layout_constraintStart_toStartOf="@id/list_profile_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/profile_list_date"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/profile_list_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
       android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_profile_img"
        app:layout_constraintEnd_toEndOf="@id/list_profile_img"
        app:layout_constraintRight_toRightOf="parent "
        app:layout_constraintLeft_toRightOf="@id/profile_list_title"
        />

</androidx.constraintlayout.widget.ConstraintLayout>