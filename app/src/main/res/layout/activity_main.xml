<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    tools:context="com.costa.views.main.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:fontFamily="@font/mr_dafoe"
            android:shadowColor="@color/softBlack"
            android:background="@drawable/bottom_border_grey"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="Instagrammo"
            android:layout_marginTop="@dimen/tiny_margin"
            android:padding="@dimen/postText_margin"
            android:textAlignment="center"
            android:textColor="@color/softYellow"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/home_container_fragment"
            app:layout_constraintEnd_toEndOf="@+id/container_main"
            app:layout_constraintStart_toStartOf="@+id/container_main"
            app:layout_constraintTop_toTopOf="@+id/container_main" />


        <FrameLayout
            android:id="@+id/home_container_fragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
            app:layout_constraintEnd_toEndOf="@+id/container_main"
            app:layout_constraintStart_toStartOf="@+id/container_main"
            app:layout_constraintTop_toBottomOf="@+id/logo" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:elevation="10dp"
            app:itemIconTint="@color/selector_navb"
            app:itemRippleColor="@color/softGray"
            app:labelVisibilityMode="unlabeled"
            app:layout_constraintBottom_toBottomOf="@+id/container_main"
            app:layout_constraintEnd_toEndOf="@+id/container_main"
            app:layout_constraintStart_toStartOf="@+id/container_main"
            app:menu="@menu/nav_menu" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>