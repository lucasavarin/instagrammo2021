<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    tools:context=".LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contrainer_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logo_login"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="@dimen/margin_logo"
            android:padding="@dimen/iconText_margin"
            android:src="@mipmap/ic_launcher_app"
            android:theme="@style/SplashTheme"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contrainer_login"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mid_margin"
            android:fontFamily="@font/mr_dafoe"
            android:padding="@dimen/iconText_margin"
            android:shadowColor="@color/softBlack"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="@string/scritta_logo"
            android:textAlignment="center"
            android:textColor="@color/softYellow"
            android:textSize="50sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo_login" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_username"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mid_margin"
            android:padding="@dimen/iconText_margin"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopEnd="@dimen/mid_margin"
            app:boxCornerRadiusTopStart="@dimen/mid_margin"
            app:layout_constraintEnd_toEndOf="@+id/contrainer_login"
            app:layout_constraintStart_toStartOf="@+id/contrainer_login"
            app:layout_constraintTop_toBottomOf="@id/logo">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/str_username"
                android:imeOptions="actionDone"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mid_margin"
            android:padding="@dimen/iconText_margin"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopEnd="@dimen/mid_margin"
            app:boxCornerRadiusTopStart="@dimen/mid_margin"
            app:layout_constraintEnd_toEndOf="@+id/contrainer_login"
            app:layout_constraintStart_toStartOf="@+id/contrainer_login"
            app:layout_constraintTop_toBottomOf="@id/ti_username"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/softYellow">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/password"
                android:imeOptions="actionDone"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_restaLoggato"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mid_margin"
            android:padding="@dimen/iconText_margin"
            android:text="@string/ricordami"
            app:layout_constraintEnd_toEndOf="@+id/contrainer_login"
            app:layout_constraintStart_toStartOf="@+id/contrainer_login"
            app:layout_constraintTop_toBottomOf="@id/ti_password" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/registrati"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mid_margin"
            android:padding="@dimen/iconText_margin"
            android:text="non sei ancora registrato? Registrati"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@id/bt_login"
            app:layout_constraintEnd_toEndOf="@+id/contrainer_login"
            app:layout_constraintStart_toStartOf="@+id/contrainer_login" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mid_margin"
            android:padding="@dimen/iconText_margin"
            android:background="@drawable/radius_button"
            android:text="@string/login"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/contrainer_login"
            app:layout_constraintStart_toStartOf="@+id/contrainer_login" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>