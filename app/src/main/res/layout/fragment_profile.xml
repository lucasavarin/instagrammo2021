<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.profile.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/my_primary_gray"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/posts_count_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="pippo"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@id/posts_text"
            app:layout_constraintEnd_toEndOf="@id/posts_text"
            app:layout_constraintStart_toStartOf="@id/edit_profile_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/posts_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/posts"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@id/edit_profile_btn"
            app:layout_constraintEnd_toStartOf="@id/followers_text"
            app:layout_constraintStart_toStartOf="@id/edit_profile_btn"
            app:layout_constraintTop_toBottomOf="@id/posts_count_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/followers_count_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintBaseline_toBaselineOf="@id/posts_count_text"
            app:layout_constraintBottom_toTopOf="@id/followers_text"
            app:layout_constraintEnd_toEndOf="@id/followers_text"
            app:layout_constraintStart_toStartOf="@id/followers_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/followers_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/followers"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintBaseline_toBaselineOf="@id/posts_text"
            app:layout_constraintEnd_toEndOf="@id/edit_profile_btn"
            app:layout_constraintStart_toEndOf="@id/posts_text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/edit_profile_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/custom_button"
            android:minHeight="0dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/edit_profile"
            android:textAllCaps="false"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/profile_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/my_primary_gray"
        app:layout_constraintBottom_toTopOf="@+id/tab_button_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_container">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_container_due"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/profile_name_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Inserire Nome Profilo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/profile_description_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Inserire Descrizione Profilo "
                app:layout_constraintStart_toStartOf="@id/profile_name_text"
                app:layout_constraintTop_toBottomOf="@id/profile_name_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_button_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/my_primary_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView"
        app:tabIconTint="@color/my_secondary_gray"
        app:tabIndicatorColor="@color/my_primary_color"
        app:tabIndicatorHeight="3dp">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/button_grid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:icon="@drawable/ic_sharp_grid_on" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/button_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:icon="@drawable/ic_list_on" />
    </com.google.android.material.tabs.TabLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_profileImg_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_button_layout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_profileImg_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_button_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>


