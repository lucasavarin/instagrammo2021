<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_profilo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mid_margin"
        android:layout_marginTop="@dimen/mid_margin"
        android:background="@drawable/ic_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_nome_Profilo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="nome Utente"
        android:textAlignment="center"

        app:layout_constraintBottom_toBottomOf="@id/img_profilo"
        app:layout_constraintLeft_toRightOf="@+id/img_profilo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ct_post"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="116dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_profilo">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/mid_margin"
            android:layout_marginRight="@dimen/mid_margin"
            android:layout_marginBottom="@dimen/mid_margin"
            android:layout_marginTop="@dimen/mid_margin"
            android:background="@drawable/ic_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mid_margin"
            android:layout_marginRight="@dimen/mid_margin"
            android:text="description"
            android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@id/img_post"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mid_margin"
            android:layout_marginRight="@dimen/mid_margin"
            android:text="data e ora"
            android:textAlignment="textEnd"
            app:layout_constraintTop_toBottomOf="@id/img_post"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>