    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinetopfollower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gradientup"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/background_follower_recycler_up"
        app:layout_constraintTop_toTopOf="@+id/guidelinetopfollower"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_follow_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/default2"
        android:layout_marginBottom="@dimen/default2"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="@id/guidelinebottomfollower"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelinetopfollower"
        app:layout_constraintVertical_bias="1.0"
        tools:context=".view.views.home.HomeFragment"
        tools:listitem="@layout/item_follow_home" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gradientdown"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/background_follower_recycler_down"
        app:layout_constraintBottom_toBottomOf="@id/guidelinebottomfollower"
        app:layout_constraintEnd_toEndOf="@+id/home_follow_recycler"
        app:layout_constraintHeight_percent="0.005"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinebottomfollower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.16" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_post_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/default2"
        android:layout_marginTop="@dimen/default2"
        app:layout_constraintBottom_toBottomOf="@id/guidelinebottompost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guidelinebottomfollower"
        tools:context=".view.views.home.HomeFragment"
        tools:listitem="@layout/item_post_home" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinebottompost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1" />


</androidx.constraintlayout.widget.ConstraintLayout>