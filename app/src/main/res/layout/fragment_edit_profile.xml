<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    tools:context="com.costa.views.EditProfileFragment">


    <!-- TODO: Update blank fragment layout -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/immagineProfilo"
        android:layout_width="129dp"
        android:layout_height="96dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/person"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nomeIdImmagine"
        style="@style/profile_text_count"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="24dp"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@id/id_immagine"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toEndOf="@id/immagineProfilo"
        app:layout_constraintStart_toStartOf="@id/id_immagine"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Id Profilo" />



    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/id_immagine"
        style="@style/profile_text"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:text="26"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/immagineProfilo"
        app:layout_constraintStart_toEndOf="@id/immagineProfilo"
        app:layout_constraintTop_toBottomOf="@id/nomeIdImmagine" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nomeProfilo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:textSize="10sp"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/immagineProfilo"
        tools:text="Nome Profilo" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/in_editNomeProfilo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mid_margin"
        android:layout_marginTop="@dimen/margin_from_other_textInputLayout"
        android:layout_marginEnd="@dimen/mid_margin"
        app:boxBackgroundMode="outline"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nomeProfilo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editNomeProfilo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nome_utente"
            android:textSize="15sp"
            android:imeOptions="actionDone"
            android:inputType="textPersonName"
            android:backgroundTint="@color/transparent"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/in_editDescrizione"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mid_margin"
        android:layout_marginTop="@dimen/mid_margin"
        android:layout_marginEnd="@dimen/mid_margin"
        app:counterEnabled="true"
        app:counterMaxLength="100"
        app:boxBackgroundMode="outline"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/in_editNomeProfilo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editDescrizione"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/descrizione"
            android:textSize="15sp"
            android:imeOptions="actionDone"
            android:inputType="textPersonName"
            android:backgroundTint="@color/transparent"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- TODO: Bottons -->


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_conferma"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_botton"
        android:textAllCaps="false"
        android:src="@drawable/ic_check"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/mid_large_margin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/immagineProfilo"
        app:layout_constraintTop_toTopOf="@+id/immagineProfilo"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_salva_modifica"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/circle_botton"
        android:text="Salva"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:layout_marginStart="@dimen/mid_margin"
        android:layout_marginRight="@dimen/mid_margin"
        android:layout_marginBottom="@dimen/mid_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
         />

</androidx.constraintlayout.widget.ConstraintLayout>