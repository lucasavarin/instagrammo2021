<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_login">

    <view.main.CustomTopBar
        android:id="@+id/custom_edit_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="Modifica profilo"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/custom_edit_bar"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_id_immagine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg"
        android:fontFamily="@font/allerta"
        android:hint="@string/id_immagine"
        android:text="Id immagine"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:padding="@dimen/medium"
        app:layout_constraintTop_toBottomOf="@+id/custom_edit_bar"
        app:layout_constraintStart_toEndOf="@+id/image_profile"
        app:layout_constraintEnd_toStartOf="@+id/btn_salva_immagine"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_salva_immagine"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/btn_bg"
        android:padding="@dimen/medium"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/login_form_details_medium"
        app:layout_constraintTop_toBottomOf="@+id/custom_edit_bar"
        app:layout_constraintStart_toEndOf="@+id/et_id_immagine"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_nome_profilo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg"
        android:fontFamily="@font/allerta"
        android:hint="@string/nome_profilo"
        android:text="Nome Profilo"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:padding="@dimen/medium"
        app:layout_constraintTop_toBottomOf="@+id/image_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_descrizione_profilo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg"
        android:fontFamily="@font/allerta"
        android:hint="@string/descrizione_profilo"
        android:text="Descrizione"
        android:imeOptions="actionDone"
        android:inputType="textLongMessage"
        android:padding="@dimen/medium"
        app:layout_constraintTop_toBottomOf="@+id/et_nome_profilo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_salva"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:padding="@dimen/medium"
        android:text="@string/salva"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/login_form_details_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>