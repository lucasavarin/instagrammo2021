<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/softWhit"
    android:clickable="true"
    android:focusable="true"
    tools:context="com.costa.views.EditProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/immagineProfilo"
        android:layout_width="129dp"
        android:layout_height="96dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/person"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nomeIdImmagine"
        style="@style/profile_text_count"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="24dp"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@id/id_immagine"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toEndOf="@id/immagineProfilo"
        app:layout_constraintStart_toStartOf="@id/id_immagine"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Id Profilo" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/id_immagine"
        style="@style/profile_text"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:text="26"
        app:layout_constraintStart_toEndOf="@id/immagineProfilo"
        app:layout_constraintTop_toBottomOf="@id/nomeIdImmagine" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/nomeProfilo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:textSize="10sp"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/immagineProfilo"
        tools:text="Nome Profilo" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editNomeProfilo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:textSize="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nomeProfilo"
        tools:text="Edit Profilo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/descrizioneProfilo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:textSize="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editNomeProfilo"
        tools:text="Descrizione" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editDescrizione"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:textSize="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descrizioneProfilo"
        tools:text="Edit Descrizione" />

    <!-- TODO: Bottons -->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_conferma"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_check"
        android:textAllCaps="false"
        app:background="@drawable/radius_button"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/id_immagine"
        app:layout_constraintBottom_toBottomOf="@+id/immagineProfilo"
        app:layout_constraintTop_toTopOf="@+id/immagineProfilo"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_salva_modifica"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/radius_button"
        android:text="Salva"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editDescrizione"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
         />

</androidx.constraintlayout.widget.ConstraintLayout>