<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="100dp"
    android:background="@color/background"
    android:clickable="true"
    android:focusable="true"
    tools:context=".SplashActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_splash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/logo_splash"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher_app"
            android:theme="@style/SplashTheme"
            app:layout_constraintBottom_toTopOf="@+id/tema_splash"
            app:layout_constraintEnd_toEndOf="@+id/container_splash"
            app:layout_constraintStart_toStartOf="@+id/container_splash"
            app:layout_constraintTop_toTopOf="@+id/container_splash" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tema_splash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mr_dafoe"
            android:shadowColor="@color/softBlack"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="Instagrammo"
            android:textAlignment="center"
            android:textColor="@color/softYellow"
            android:textSize="@dimen/mid_large_margin"
            app:layout_constraintBottom_toBottomOf="@+id/container_splash"
            app:layout_constraintEnd_toEndOf="@+id/container_splash"
            app:layout_constraintStart_toStartOf="@+id/container_splash"
            app:layout_constraintTop_toBottomOf="@+id/logo_splash" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>