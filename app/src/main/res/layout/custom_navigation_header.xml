<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/bt_back_buttom"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_arrow_back"
        android:background="#00000000"
        android:layout_margin="@dimen/postText_margin"
        android:padding="@dimen/postText_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_nome_pagina"
        app:layout_constraintEnd_toStartOf="@id/tv_nome_pagina"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_nome_pagina"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_margin="@dimen/postText_margin"
        android:padding="@dimen/postText_margin"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="nome della Finestra"
        app:layout_constraintLeft_toRightOf="@id/bt_back_buttom"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>


