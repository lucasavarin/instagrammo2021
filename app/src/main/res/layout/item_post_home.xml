<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_profilo"
        style="@style/icon"
        android:src="@drawable/person"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_nome_Profilo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="nome utente"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/img_profilo"
        app:layout_constraintTop_toTopOf="@id/img_profilo"
        app:layout_constraintBottom_toBottomOf="@id/img_profilo"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_post"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"

        android:src="@drawable/image_placeholder"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_description"
        app:layout_constraintTop_toBottomOf="@+id/img_profilo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_description"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/mid_margin"
            android:layout_marginRight="@dimen/mid_margin"
            android:padding="16dp"

            android:text="description"
            android:textAlignment="textStart"

            app:layout_constraintTop_toBottomOf="@id/img_post"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_data"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/mid_margin"
            android:layout_marginRight="@dimen/mid_margin"

            android:text="data e ora"
            android:textAlignment="textEnd"

            app:layout_constraintTop_toBottomOf="@id/img_post"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_description"
            app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
